extends layout
block content
  // Requires Foundation 4 | visit http://foundation.zurb.com to download
  // Header and Nav
  .row
    .large-12.columns
      .panel
        h1 Coursera Courses
  // End Header and Nav
  .row
    // Nav Sidebar
    // This is source ordered to be pulled to the left on larger screens
    .large-3.columns
      .panel
        a(href='#')
          img(src='./images/learning.jpg')
        h5
          a(href='#') Josh and Casper
        .section-container.vertical-nav(data-section='', data-options='deep_linking: false; one_up: true')
          section.section
            h5.title
              a(href='/') Home
    // Main Feed
    // This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens
    .large-9.columns
      // Feed Entry
      each course in elements       
        .row
          .large-2.columns.small-3
            img(src='./images/cousera.png')
          .large-10.columns
            p #{course.name}
        hr
  // Footer
  footer.row
    .large-12.columns
      hr
      .row
        .large-5.columns
          p Â© Copyright no one at all. Go to town.
        .large-7.columns
          ul.inline-list.right
            li
              a(href='#') Section 1
            li
              a(href='#') Section 2
            li
              a(href='#') Section 3
            li
              a(href='#') Section 4
            li
              a(href='#') Section 5
            li
              a(href='#') Section 6
